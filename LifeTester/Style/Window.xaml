                                          Height="12"
                                          Name="gridLanguage">
                                        <!--<Button Style="{StaticResource SystemButton}"
                                                Name="btnShowLanguagePopup"
                                                Command="{Binding Source={x:Static local:MainWindow.ShowLanguagePopupCommand}}"
                                                CommandParameter="{Binding ElementName=popupLanguage}"
                                                ToolTip="{DynamicResource Language}">
